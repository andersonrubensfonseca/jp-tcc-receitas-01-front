generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model pessoas {
  ID        Int             @id
  NOME      String?         @db.VarChar(150)
  SOBRENOME String?         @db.VarChar(150)
  EMAIL     String?         @unique(map: "EMAIL") @db.VarChar(255)
  CELULAR   String?         @db.VarChar(20)
  SENHA     String?         @db.VarChar(150)
  GENERO    pessoas_GENERO?
}

enum pessoas_GENERO {
  Feminino
  Masculino
  Outros
  Prefiro_n_o_dizer @map("Prefiro n√£o dizer")
}
